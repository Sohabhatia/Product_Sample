  body
    .vl
    // SignUpbox
    .login-box
      .row.collapse.expanded
        .small-12.medium-6.column.small-order-2.medium-order-1
          .login-box-form-section
            h1.login-box-title Log-in
            input.login-box-input#name(type='text' name='Name' placeholder='Name')
            input.login-box-input#username(type='text' name='Username' placeholder='Username')
            input.login-box-input#pass(type='password' name='password' placeholder='Password')
            
            
            button.login-box-submit-button#button(type='click' name='signup_submit' value='Sign me up')
          .or OR
        .small-12.medium-6.column.small-order-1.medium-order-2.login-box-social-section
          .login-box-social-section-inner
            span.login-box-social-headline Sign in with
              br
              | your social network
            a.login-box-social-button-facebook Log in with facebook
            a.login-box-social-button-twitter Log in with Twitter
            a.login-box-social-button-google Log in with Google+
    // //SignUpbox
    script(src='https://kit.fontawesome.com/a076d05399.js')
    
   
